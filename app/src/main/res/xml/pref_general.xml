    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="http://miraway.vn"
        android:inputType="textCapWords"
        android:key="url"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="URL" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_application_list_titles"
        android:entryValues="@array/pref_application_list_values"
        android:key="application_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Application" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="auto_fullscreen"
        android:title="Auto Full Screen" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="cache_file"
        android:title="Cache File" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="auto_reload"
        android:title="Auto Reload" />

